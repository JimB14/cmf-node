<% include ../partials/header %>

<div class="container">
   <div class="row">

         <div class="col-md-8 col-sm-8 col-xs-10">
            <h1><%= title %></h1>

            <% include ../partials/errors %>

            <form method="POST" action="/contact" class="form-container">

               <div class="form-group">
                  <label for="email">Email</label>
                  <input type="text" class="form-control" name="email"
                     id="email" placeholder="Email"
                     value="<%= (typeof errors === 'undefined') ? '' : email %>"
                     autofocus>
               </div>

               <div class="form-group">
                  <label for="firstname">First name</label>
                  <input type="text" class="form-control" name="firstname"
                     id="name" placeholder="First name"
                     value="<%= (typeof errors === 'undefined') ? '' : firstname %>">
               </div>

               <div class="form-group">
                  <label for="lastname">Last name</label>
                  <input type="text" class="form-control" name="lastname"
                     id="name" placeholder="Last name"
                     value="<%= (typeof errors === 'undefined') ? '' : lastname %>">
               </div>

               <div class="form-group">
                  <label for="message">Message</label>
                  <textarea class="form-control" name="message" id="message" rows="5" placeholder="How can we help?"><%= (typeof message === 'undefined') ? '' : message %></textarea>
               </div>

               <div class="form-group">
                  <button type="submit" class="btn btn-cmf btn-lg btn-block">
                     Submit
                  </button>
                  <small><span class="asterisk">*</span>Form will not submit unless
                     all fields contain data.</small>
               </div>

            </form>

         </div>
   </div>
</div><!-- /container -->

<% include ../partials/footer %>
