<% include ../partials/header %>

<div class="container">
   <div class="row">
      <div class="col-md-10 col-sm-10 col-xs-10" style="float:none; margin: 0 auto;">
         <h2>Edit "<%= article.title %>"</h2>

         <form method="post" action="/upload" enctype="multipart/form-data">
         <!-- <form method="post" action="/articles/<%= article._id %>?_method=PUT" enctype="multipart/form-data"> -->

            <div class="form-group">
              <label for="title">Title</label>
              <input class="form-control" type="text" name="article[title]"
                  id="title" value="<%= article.title %>" autofocus>
            </div>
            <div class="form-group">
               <label for="image">Upload new image</label>
               <input class="" type="file" name="image" id="image" onchange="getFileSize()">
               <small><span class="asterisk">*</span>Must be jpg, jpeg, png, gif</small>
               <p class="color-blue" id="filesize"></p>
            </div>
            <div class="edit-article-image">
               <label>Current image</label>
               <img class="img-responsive" src="/images/uploaded_images/<%= article.thumbImage %>" alt="<%= article.title %>">
            </div>
            <div class="form-group">
              <label for="body">Content</label>
              <textarea class="form-control froala-editor" name="article[body]" rows="15"><%= article.body %></textarea>
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-lg btn-block">
                  Update
               </button>
            </div>
         </form>
      </div>

   </div>
</div>


<% include ../partials/footer %>
