<% include ../partials/header %>

<div class="container">
    <div class="row">

        <div class="col-md-8 col-sm-8 col-xs-10" style="float:none; margin: 0 auto;">
            <h2><%= title %> <em><%= article.title %></em></h2>

            <% include ../partials/errors %>

            <form method="POST" action=""
                  class='form-container'>
                <div class="form-group">
                    <label for="body">Comment</label>
                    <textarea class="form-control" name="text" id="text" placeholder="Be sure to support your comments with your thinking..." rows="5" autofocus><%- (typeof comment === 'undefined') ? '' : comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-cmf btn-lg btn-block">
                       Submit
                    </button>
                </div>
            </form>
            <a style="cursor:pointer" onclick="window.history.back(-1)">Prev page</a>
        </div>

    </div>
</div>

<% include ../partials/footer %>
