<% include ../partials/header %>

<div class="container">
   <div class="row">

       <div class="col-md-8 col-sm-8 col-xs-10" style="float:none; margin: 0 auto;">
         <h2>Edit comment about <em><%= article.title %></em></h2>

         <form action="/articles/<%= article._id %>/comments/<%= comment._id %>?_method=PUT"
            method="POST" class='form-container'>
            <div class="form-group">
               <label for="body">Comment</label>
               <textarea class="form-control" name="comment[text]" id="text" rows="5" autofocus><%= comment.text %></textarea>
            </div>
            <div class="form-group">
               <button type="submit" class="btn btn-primary btn-lg btn-block">
                  Submit
               </button>
            </div>
         </form>
         <a href="/articles">View articles</a>
      </div>

   </div>
</div>

<% include ../partials/footer %>
